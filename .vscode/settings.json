{
    "workbench.editorAssociations": {   
        "*.md": "vscode.markdown.preview.editor"
    },
    "command-runner.terminal.name": "Sync project",
    "command-runner.terminal.autoClear": true,
    "command-runner.terminal.autoFocus": true,
    "command-runner.commands": {
        "Sync source to IBM i": "scripts/cleanup.sh   &&   scripts/sync2ibmi.sh ",
        "Sync logs back": "scripts/cleanup.sh   &&   scripts/sync_back_from_ibmi.sh ",
        "Run build (summary output)": "scripts/cleanup.sh    &&   scripts/create_build_script.sh summary   &&   scripts/sync2ibmi.sh   &&   scripts/run_build.sh;   scripts/sync_back_from_ibmi.sh; scripts/git-cache-meta.sh --store",
        "Run build (detailed output)": "scripts/cleanup.sh   &&   scripts/create_build_script.sh detailed   &&   scripts/sync2ibmi.sh   &&   scripts/run_build.sh;   scripts/sync_back_from_ibmi.sh; scripts/git-cache-meta.sh --store",
        "Run build (debug)": "scripts/cleanup.sh debug   &&   scripts/create_build_script.sh debug   &&   scripts/sync2ibmi.sh debug   &&   scripts/run_build.sh debug;   scripts/sync_back_from_ibmi.sh debug; scripts/git-cache-meta.sh --store",
        "Simulate build": "scripts/cleanup.sh   &&   scripts/create_build_script.sh simulate",
        "CleanUp Build": "scripts/cleanup.sh   &&   make --makefile=make/makefile clean",
        "Show Change Debug": "scripts/cleanup.sh debug   &&   scripts/create_build_script.sh show-change-debug  ",
        "Show Change Compile": "scripts/cleanup.sh   &&   scripts/create_build_script.sh schow-change-compile ",
        "Show Change Object":  "scripts/cleanup.sh   &&   scripts/create_build_script.sh show-change-object",
        "Create Prod Object List": "scripts/cleanup.sh   &&   scripts/create_build_script.sh create-object-list ",
        "Create build script": "scripts/cleanup.sh   &&  obi/venv/bin/python obi/main.py -a create -p ${workspaceFolder}",
        "Reset Build Timestamp": "scripts/cleanup.sh   &&   scripts/get-prod-object-timestamp.sh",
        "Create deployment": "scripts/cleanup.sh   &&  scripts/create_deployment.sh",
        "Merge with production": "git pull && git -c 'core.editor=code --wait --reuse-window' merge main && git push && echo 'Done' && git rev-parse HEAD >> commit.log ",
        "Merge cancel": "git merge --abort"
    },
    "workbench.editor.enablePreview": true,
    "actionButtons": {
        "commands": [
            {
                "name": "$(symbol-property) Reset all",
                "command": "git restore .  &&  git reset  &&  git clean -fd  &&  scripts/git-cache-meta.sh --apply "
            },
            {
                "name": "ü™ü Builds from prod",
                "command": "scripts/cleanup.sh   &&   scripts/get-prod-object-timestamp.sh"
            },
            {
                "name": "‚ôªÔ∏è Clean builds",
				"color": "white",
				"useVsCodeApi": false,
                "command": "scripts/cleanup.sh  &&   make --makefile=make/makefile clean"
            },
            {
                "name": "‚ôªÔ∏è Clean logs",
				"color": "white",
				"useVsCodeApi": false,
                "command": "scripts/cleanup.sh "
            },
            {
                "name": "$(run-all) Build all",
				"color": "white",
				"useVsCodeApi": false,
                "command": "scripts/cleanup.sh   &&   scripts/create_build_script.sh   &&   scripts/sync2ibmi.sh   &&   scripts/run_build.sh debug;   scripts/sync_back_from_ibmi.sh;  scripts/git-cache-meta.sh --store"
            },
            {
                "name": "$(telescope) Show Changes",
				"color": "white",
				"useVsCodeApi": false,
                "command": "scripts/cleanup.sh   &&   scripts/create_build_script.sh show-change   &&   scripts/git-cache-meta.sh --store"
            },
            {
                "name": "$(pass-filled) $(rocket)  Deploy",
				"color": "",
				"useVsCodeApi": false,
                "command": "scripts/cleanup.sh   &&  scripts/create_deployment.sh"
            }
        ]
    },
    "files.associations": {
        "*.rpg.pgm": "rpg",
        "*.rpgle.pgm": "rpgle",
        "*.rpgle.srvpgm": "rpgle",
        "*.sqlrpgle.pgm": "rpgle",
        "*.sqlrpgle.srvpgm": "rpgle",
        "*.clle.srvpgm": "cl",
        "*.clle.pgm": "cl",
        "*.clp.pgm": "cl",
        "*.sqltable.file": "sql",
        "*.sqlview.file": "sql",
        "*.sqlproc.file": "sql"
    },
    "files.exclude": {
        "**/.git*": false,
        ".vscode": false,
        "build": false,
        "docs": false,
        "make": false,
        "**/Thumbs.db": true
    }
}